---
/*
  Updated per request:
  - BrandName → 16px, bold
  - Tagline → 12px
  - Spacing between them = 4px
  - No CTA
  - Always bottom-right
*/
const {
  brandName = "BuildX",
  logoSrc = "https://78f1f0dd390afac459a74c052d38e107.cdn.bubble.io/f1764063156347x502743062572252900/logo.png",
  tagline = "Build an app in minutes",
  position = "bottom-right",
  bgColorClass = "bg-white",
  textColorClass = "text-slate-900",
} = Astro.props;
---

<style>
  .bfb-logo {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .bfb-brand {
    font-size: 16px;
    font-weight: 700;
    line-height: 1.2;
  }

  .bfb-tagline {
    font-size: 12px;
    line-height: 1.2;
    margin-top: 4px; /* requested spacing */
    opacity: 0.9;
  }
</style>

<div
  class="fixed z-[9999] bottom-6 right-4 md:right-8 max-w-[320px] md:max-w-sm"
  role="complementary"
  aria-label={`${brandName} branding`}
>
  <div
    class={`shadow-2xl rounded-2xl overflow-hidden transform transition-all duration-300 ring-2 ring-slate-200 ${bgColorClass} ${textColorClass}`}
  >
    <div class="flex items-center gap-3 p-3">
      {logoSrc && (
        <img src={logoSrc} alt={`${brandName} logo`} class="bfb-logo rounded-md" />
      )}

      <div class="flex-1 min-w-0">
        <p class="bfb-brand truncate" title={brandName}>{brandName}</p>

        {tagline && (
          <p class="bfb-tagline truncate" title={tagline}>{tagline}</p>
        )}
      </div>
    </div>
  </div>
</div>
