---
/*
  BrandedFloatingBanner.css-only.astro
  - Always visible floating branding banner (bottom-right)
  - No toggle, no JS, no CTA
  - Defaults:
      brandName: "BuildX"
      logoSrc: remote URL (the one you provided)
      tagline: "Build an app in minutes"
*/
const {
  brandName = "BuildX",
  // default logo URL provided by you
  logoSrc = "https://78f1f0dd390afac459a74c052d38e107.cdn.bubble.io/f1764063156347x502743062572252900/logo.png",
  tagline = "Build an app in minutes",
  // position prop kept for API-compatibility but ignored â€” banner is always bottom-right
  position = "bottom-right",
  bgColorClass = "bg-white",
  textColorClass = "text-slate-900",
} = Astro.props;
---
<style>
  /* Ensure logo fits the layout */
  .bfb-logo {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
</style>

<div
  class="fixed z-[9999] bottom-6 right-4 md:right-8 max-w-[320px] md:max-w-sm"
  role="complementary"
  aria-label={`${brandName} branding`}
>
  <div
    class={`shadow-2xl rounded-2xl overflow-hidden transform transition-all duration-300 ring-2 ring-slate-200 ${bgColorClass} ${textColorClass}`}
  >
    <div class="flex items-center gap-3 p-3">
      {logoSrc && (
        <img src={logoSrc} alt={`${brandName} logo`} class="bfb-logo rounded-md" />
      )}

      <div class="flex-1 min-w-0">
        <h3 class="font-semibold truncate" title={brandName}>
          {brandName}
        </h3>

        {tagline && (
          <p class="mt-1 text-sm leading-snug opacity-90 truncate">{tagline}</p>
        )}

        <!-- CTA intentionally removed per request -->
      </div>
    </div>
  </div>
</div>
