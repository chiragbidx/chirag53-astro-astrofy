---
const {
  brandName = "Your Brand",
  logoSrc = null,
  tagline = "",
  cta = null,
  position = "bottom-right",
  bgColorClass = "bg-white",
  textColorClass = "text-slate-900",
} = Astro.props;
---

<style>
  /* Small optional styling to make sure image looks good */
  .bfb-logo {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
</style>

<div
  class={`fixed z-[9999] bottom-6 ${
    position === "bottom-left" ? "left-4 md:left-8" : "right-4 md:right-8"
  } max-w-[320px] md:max-w-sm`}
  role="complementary"
  aria-label={`${brandName} branding`}
>
  <div
    class={`shadow-2xl rounded-2xl overflow-hidden transform transition-all duration-300 ring-2 ring-slate-200 ${bgColorClass} ${textColorClass}`}
  >
    <div class="flex items-center gap-3 p-3">
      {logoSrc && (
        <img src={logoSrc} alt={`${brandName} logo`} class="bfb-logo rounded-md" />
      )}

      <div class="flex-1 min-w-0">
        <h3 class="font-semibold truncate" title={brandName}>
          {brandName}
        </h3>

        {tagline && (
          <p class="mt-1 text-sm leading-snug opacity-90 truncate">{tagline}</p>
        )}

        {cta && (
          <p class="mt-2">
            <a
              href={cta.href}
              class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-medium shadow-sm ring-1 ring-inset"
            >
              {cta.label}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden
              >
                <path
                  fill-rule="evenodd"
                  d="M12.293 3.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-8 8a1 1 0 01-1.414-1.414L15.586 8H6a1 1 0 110-2h9.586l-3.293-3.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                />
              </svg>
            </a>
          </p>
        )}
      </div>
    </div>
  </div>
</div>
